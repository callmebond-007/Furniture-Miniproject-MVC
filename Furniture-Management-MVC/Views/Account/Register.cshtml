@model RegistrationViewModel

<link href="~/css/Register.css" rel="stylesheet" />

<section class="text-center text-lg-start" style="background-color: #D3D3D3">


    <!-- Jumbotron -->
    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
                    <div class="card-body p-5 shadow-5 text-center">
                        <h2 class="fw-bold mb-5">Sign up now</h2>
                        <form asp-controller="Account" asp-action="Register" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-outline mb-4">
                                <input class="form-control" asp-for="Email" placeholder="Enter a valid Email Address" />
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>


                            <div class="form-outline mb-4">
                                <input class="form-control" asp-for="Password" placeholder="Enter Password" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <input class="form-control" asp-for="ConfirmPassword" placeholder="Enter Confirm Password" />
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>


                            <button type="submit" class="btn btn-primary btn-block mb-4">
                                Register
                            </button>

                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-block mb-4">Cancel</a>



                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="https://stylesatlife.com/wp-content/uploads/2020/01/interior-furniture-design-for-hall.jpg" class="w-100 rounded-4 shadow-4"
                     alt="" />
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>
